---
import PageLayout from "../../layouts/PageLayout.astro";

const pageTitle = "Projects Expo Page";
const description = "Welcome page";

import { getCollection } from "astro:content";
import ProjectCard from "../../components/ProjectCard.astro";

const allProjects = await getCollection("projects");
---

<PageLayout title={pageTitle} description={description}>

  <main class="min-h-[60vh] flex flex-col gap-8 container larger">

    <h1 class="text-3xl text-center">Astro Projects Expo</h1>

    <section class="flex items-center justify-between">

      <label class="w-2/3 md:w-1/3">
        <input type="search" name="find" placeholder="find framewok, Language" >
      </label>

      <div>
        results: 8/10
      </div>

    </section>

    <p class="mx-auto w-fit">This is where I will post about my journey learning Astro.</p>


    <section class="grid grid-flow-row grid-cols-2 md:grid-cols-3  gap-3">
      {allProjects.map((project) => <ProjectCard project={project} />)}
    </section>

  </main>
</PageLayout>


