---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import BaseHead from "@components/BaseHead.astro";
import ContactForm from "@components/ContactForm.astro";

interface Props {
    description: string;
    title: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead description={description} />
        <title>Astro Porfolio | {title}</title>
    </head>
    <body class="min-h-screen bg-white dark:bg-dark dark:text-gray-100">

         <!-- Navbar -->
        <Navbar />
        <!-- Content here -->
        <slot />
        <!-- contact me form -->
        <ContactForm />
        <!-- footer -->
        <Footer />

        <style is:global>
            @tailwind base;
            @tailwind components;
            @tailwind utilities;

            @layer base {
                :root {
                    --pry-clr: #030a3b;
                    --snd-clr: #FE0000;
                    --ntr-clr: #d4d7ed;
                    --drk-pry-clr: #FE0000;
                }

                * {
                    @apply box-border m-0 p-0 transition-all duration-100 ease-linear;
                }

                html {
                    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
                }

                h2,h3,h4,h5 {
                    @apply font-semibold
                }

                h1 {
                    @apply text-3xl font-bold
                }

                h2 {
                    @apply text-2xl
                }

                h3 {
                    @apply text-xl
                }

                h4 {
                    @apply text-lg
                }

                label {
                    @apply flex flex-wrap gap-4 capitalize cursor-pointer;
                }

                input,
                textarea {
                    @apply w-full px-4 bg-inherit border border-zinc-600 dark:border-zinc-300 rounded-md min-h-8;
                }

                textarea {
                    @apply p-4;
                }

                input::placeholder,
                text {
                    @apply text-gray-500;
                }

                input[type="radio"], input[type="checkbox"] {
                    @apply w-fit inline-block
                }

                a {
                    @apply text-inherit cursor-pointer;
                }

                .container {
                    @apply w-full mx-auto p-4 md:p-8;
                }

                .btn {
                    @apply px-4 py-2 rounded-lg bg-primary hover:bg-secondary dark:bg-[var(--drk-pry-clr)] 
                    text-gray-300 w-fit flex justify-center items-center gap-4
                    active:bg-indigo-700 active:ring-2 ring-blue-500 cursor-pointer;
                }
            }


            @layer components {}

            @layer utilities {
                .bg-dark {
                    @apply bg-gradient-to-br from-slate-900 to-slate-700;
                }

                .larger {
                    @apply max-w-5xl;
                }

                .smaller {
                    @apply max-w-5xl;
                }
            }
        </style>
    </body>
</html>
